<div class= "container px-5 px-sm-0">

<div class= "row">

<div class= "col-md-3">

<%= render 'list', book: @book, books: @books, user: @user %>

</div>


<div class= "col-md-8 offset-md-1">

  <h2>Books</h2>

  <table class="table table-hover table-inverse">

  <thead>

    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan= "3"></th>
    </tr>

  </thead>

  <tbody>

  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag @user.get_profile_image(100,100) %></td>
    <td>Title: <%= link_to book.title, books_path) %></td>
    <td>Opinion: <%= book.body %></td>
    <td><%= link_to book.user.name, user_session_path %></td>
  </tr>
  <% end %>

  </tbody>

</table>

</div>

</div>






<p>Find me in app/views/books/index.html.erb</p>
