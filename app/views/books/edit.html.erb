<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class = "er-title"><%= @book.errors.count %>error prohibited this obj from being saved:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
  <label for = "inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title" %>
  <label for = "inputOpinion">Opinion</label>
  <%= f.text_area :opinion, autofocus: true, id:"inputOpinion", placeholder:"Opinion" %>
  <%= f.submit "Update Book" %>

  <%= link_to "show", book_path.id %>
  <%= link_to "Back", books_path %>


