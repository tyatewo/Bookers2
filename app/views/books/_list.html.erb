<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  <% if @user == current_user %>
  <p><%= link_to "icon", edit_user_path(@user.id) %></p>
  <% end %>
</div>


